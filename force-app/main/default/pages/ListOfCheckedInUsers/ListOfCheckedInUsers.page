<apex:page controller="ContactsListWithController">
  
  <!-- css styles for the page -->
  <apex:stylesheet value="{!$Resource.CustomCSS}" />

  <!-- header -->
  <apex:image styleClass="covid_app_logo" value="{!$Resource.CovidAppLogo}" />
  <h1>Covid19 registration app</h1>
  
  <apex:form>
    <apex:pageBlock title="Contacts List" id="contacts_list">
        <!-- Contacts List generated by the ContactsListWithController class -->
      <apex:pageBlockTable value="{! contacts }" var="ct">
        <apex:column value="{! ct.FirstName }"/>
        <apex:column value="{! ct.LastName }"/>
        <apex:column value="{! ct.Date_of_checkin__c }"/>
        <apex:column><apex:outputLink value="https://resourceful-hawk-2mn035-dev-ed.lightning.force.com/lightning/r/Contact/{! ct.Id}/view">details</apex:outputLink></apex:column>
      </apex:pageBlockTable>
    </apex:pageBlock>
  </apex:form>

  <!-- link to the check-in VF page -->
  <p>You can check-in below using the following link:</p>
  <apex:outputLink value="https://resourceful-hawk-2mn035-dev-ed--c.visualforce.com/apex/UserCheckinPage" id="theLink">Check-in Form</apex:outputLink>  
</apex:page>